version: "3.8"
services:
  backend:
    build: ./backend
    ports:
      - "5000:5000"
    depends_on:
      - db
  frontend:
    build: ./frontend
    ports:
      - "3000:3000"
    depends_on:
      - backend
  db:
    image: "{{ db_image }}"
    environment:
      {% if db_type == 'mysql' %}
      MYSQL_ROOT_PASSWORD: root
      MYSQL_DATABASE: mydb
      {% elif db_type == 'postgres' %}
      POSTGRES_PASSWORD: root
      POSTGRES_DB: mydb
      {% endif %}
    ports:
      - "{{ db_port }}:{{ db_port }}"
